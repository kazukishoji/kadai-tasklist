<% if logged_in? %>

    <p>ログインユーザ名:
<%= current_user.name %>
</p>

<%= link_to "Log out", logout_path, method: :delete %>


<% else %>

<h1>タスク一覧</h1>

<ul>
    
<% @tasks.each do |task| %>

    <li>
<%= link_to task.id, task %>

<%= task.status %>
　&gt;        
<%= task.content %>
</li>

<% end %>
    
</ul>

<%= link_to "Sign up", signup_path %>

<%= link_to "Log in", login_path %>

<%= link_to "新規タスクを登録する", new_task_path %>

<% end %>